@model BlushEventPortal.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-envelope"></i> Contact Us</h3>
                </div>
                <div class="card-body">
                    <p class="lead">Have questions or feedback? We'd love to hear from you!</p>
                    
                    <form asp-action="Index" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Your Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="Name" class="text-damage"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="your.email@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">Message</label>
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Tell us what's on your mind..."></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-body text-center">
                    <h5 style="color: var(--dark-pink);"><i class="fas fa-info-circle"></i> Other Ways to Reach Us</h5>
                    <p class="mb-2"><i class="fas fa-envelope"></i> Email: info@blusheventportal.com</p>
                    <p class="mb-2"><i class="fas fa-phone"></i> Phone: (555) 123-4567</p>
                    <p class="mb-0"><i class="fas fa-clock"></i> Hours: Monday - Friday, 9 AM - 6 PM</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
