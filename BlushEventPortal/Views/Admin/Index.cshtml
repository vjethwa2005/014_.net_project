@model IEnumerable<BlushEventPortal.Data.Event>

@{
    ViewData["Title"] = "Admin - Manage Events";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: var(--dark-pink);">
            <i class="fas fa-cog"></i> Manage Events
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Event
        </a>
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No events yet. Create your first event!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Venue</th>
                        <th>RSVPs</th>
                        <th>Capacity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.EventDate.ToString("MMM dd, yyyy")</td>
                            <td>@item.Venue</td>
                            <td>@item.RSVPs.Count</td>
                            <td>@item.Capacity</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
