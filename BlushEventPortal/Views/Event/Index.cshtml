@model IEnumerable<BlushEventPortal.Data.Event>

@{
    ViewData["Title"] = "All Events";
}

<div class="container mt-4">
    <h2 class="text-center mb-4" style="color: var(--dark-pink);">
        <i class="fas fa-calendar-alt"></i> All Events
    </h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No upcoming events at the moment. Check back soon!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 event-card">
                    <div class="card">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top event-image" alt="@item.Name">
                        }
                        <div class="card-body event-details">
                            <h5 class="event-title">@item.Name</h5>
                            <p class="event-date">
                                <i class="fas fa-calendar-alt"></i>
                                @item.EventDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </p>
                            <p class="event-venue">
                                <i class="fas fa-map-marker-alt"></i>
                                @item.Venue
                            </p>
                            <p class="card-text">@item.Description.Substring(0, Math.Min(100, item.Description.Length))...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="capacity-info">
                                    <i class="fas fa-users"></i> @item.RSVPs.Count / @item.Capacity
                                </span>
                                <a asp-controller="Event" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                                    View Details <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
